<% @user.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>
<div class="card container bg-light w-50 h-50 box">
  <div class="card-body">
    <%= form_tag("/users/create") do %>
      <h3 class="text-center">新規登録</h3>
      <div class="form-group">
        <label for="user">ユーザー名</label>
        <input name="name" value="<%= @user.name %>" type="text" class="form-control" placeholder="ユーザー名" id="user">
      </div>
      <div class="form-group">
        <label for="pswd">Password</label>
        <input type="password" name="password" value="<%= @user.password %>" class="form-control" placeholder="Password" id="pswd">
      </div>
      <button type="submit" class="btn btn-primary">登録</button>
    <% end %>
  </div>
</div>
