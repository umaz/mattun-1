<% if @error_message %>
  <div class="form-error">
    <%= @error_message %>
  </div>
<% end %>
<div class="card container bg-light w-50 h-50 box">
  <div class="card-body">
    <%= form_tag("/login") do %>
      <h3 class="text-center">ログイン</h3>
      <div class="form-group">
        <label for="user">ユーザー名</label>
        <input name="name" value="<%= @name %>" type="text" class="form-control" placeholder="ユーザー名" id="user">
      </div>
      <div class="form-group">
        <label for="pswd">Password</label>
        <input type="password" name="password" value="<%= @password %>" class="form-control" placeholder="Password" id="pswd">
      </div>
      <button type="submit" class="btn btn-primary">ログイン</button>
    <% end %>
  </div>
</div>
