<main>
  <div class="container-fluid">
    <div class="row">
      <div class="col-3 height">
        <div class="card h-100">
          <div class="card-header">
            <h5>トーク一覧</h5>
          </div>
          <ul class="list-group">
            <%= render @talks %>
          </ul>
        </div>
      </div>
      <div class="col-6 height">
        <div class="card h-100">
          <div class="card-header">
            <h5><%= @talk.name %></h5>
          </div>
          <div class="card-body board" id="talks">
            <%= render @messages %>
          </div>
          <div class="card-footer">
            <%= form_tag("/message/create", :remote => true, :id => "form-ajax") do %>
              <input type="hidden" name="talk_id" value="<%= @talk.id %>">
              <input type="hidden" name="user_id" value="<%= @current_user.id %>">
              <div class="input-group">
                <input type="text" name="message" class="form-control" placeholder="Type your message here" required>
                <span class="input-group-btn">
                  <button type="submit" class="btn btn-success" id="btn">送信</button>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-3 height">
        <div class="card h-100">
          <div class="card-header">
            <h5>ユーザー</h5>
          </div>
          <ul class="list-group">
            <%= render @users %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</main>
<%= javascript_tag do %>
  $(document).ready(function(){
    App.MakeMessageChannel(<%= @talk.id %>)
  });
<% end %>
